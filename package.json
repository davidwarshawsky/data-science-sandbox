{
  "name": "immutable-regulatory-sandbox",
  "publisher": "antigravity",
  "displayName": "Immutable Regulatory Sandbox",
  "description": "Trust-minimized environment for reproducible data science experiments.",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidwarshawsky/data-science-sandbox"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Immutable Sandbox",
      "properties": {
        "immutable.gpgKeyId": {
          "type": "string",
          "default": "",
          "description": "The GPG Key ID to use for signing manifests. If empty, one will be generated."
        }
      }
    },
    "commands": [
      {
        "command": "immutable.createSandbox",
        "title": "Immutable: Create Sandbox"
      },
      {
        "command": "immutable.finalizeExperiment",
        "title": "Immutable: Finalize Experiment"
      },
      {
        "command": "immutable.showDashboard",
        "title": "Immutable: Show Dashboard"
      },
      {
        "command": "immutable.showWelcome",
        "title": "Immutable: Show Welcome Guide"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "immutable-explorer",
          "title": "Immutable Sandbox",
          "icon": "resources/box-lock.svg"
        }
      ]
    },
    "views": {
      "immutable-explorer": [
        {
          "type": "webview",
          "id": "immutable.dashboardView",
          "name": "Dashboard"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "sandboxWalkthrough",
        "title": "Mastering the Box",
        "description": "Learn how to use the Immutable Regulatory Sandbox.",
        "steps": [
          {
            "id": "create",
            "title": "Create Sandbox",
            "description": "Create your first protected environment.",
            "media": {
              "markdown": "walkthrough/1_create.md"
            }
          },
          {
            "id": "verify",
            "title": "Verify Integrity",
            "description": "Understand the security guarantees.",
            "media": {
              "markdown": "walkthrough/2_verify.md"
            }
          },
          {
            "id": "finalize",
            "title": "Finalize & Prove",
            "description": "Generate your cryptographic prompt.",
            "media": {
              "markdown": "walkthrough/3_finalize.md"
            }
          },
          {
            "id": "exit",
            "title": "Pausing & Exiting",
            "description": "How to verify, pause, or exit safely.",
            "media": {
              "markdown": "walkthrough/4_exit.md"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sqlite3": "^3.1.11",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "fs-extra": "^11.1.1",
    "sqlite3": "^5.1.7"
  }
}